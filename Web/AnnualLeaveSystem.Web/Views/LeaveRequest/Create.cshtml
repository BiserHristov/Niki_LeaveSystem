@model AnnualLeaveSystem.Web.ViewModels.LeaveRequest.CreateLeaveRequestInputModel;
@{ this.ViewData["Title"] = "Add new leave request";
    var leaveTypes = this.Model.LeaveTypes.Select(x => new SelectListItem(x.Value, x.Key));
    var employeesInTeam = this.Model.EmployeesInTeam.Select(x => new SelectListItem(x.Value, x.Key)); }

<h1>Create Leave Request:</h1>
<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control datepicker" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control datepicker" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LeaveType"></label>
        <select asp-for="LeaveType" class="form-control" asp-items="leaveTypes"></select>
        <span asp-validation-for="LeaveType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReplacementEmployee"></label>
        <select asp-for="ReplacementEmployee" class="form-control" asp-items="employeesInTeam"></select>
        <span asp-validation-for="ReplacementEmployee" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />

</form>

@section Scripts{
    <script>
        $(function () {
            $("#datetimepicker1").datetimepicker({
                format: "dd-mm-yyyy"
            });
        });</script>
}












